[Unit]
Description=Polymarket WebSocket Ingest
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
EnvironmentFile=/etc/polymarket/polymarket.env
User=root
WorkingDirectory=%E{APP_DIR}
Environment=PYTHONUNBUFFERED=1
LimitNOFILE=262144
ExecStart=%E{APP_DIR}/.venv/bin/python %E{APP_DIR}/%E{ENTRYPOINT}
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
